---
const posts = await Astro.glob('../content/posts/ru/*.md');
---
<section class="max-w-6xl mx-auto">
  <h2 class="text-3xl font-semibold text-white mt-16 mb-8">Последние посты</h2>
  <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {posts.map(post => (
      <a href={`/ru/posts/${post.frontmatter.slug}`} class="group block">
        <article class="space-y-2 p-6 rounded-lg bg-gray-800/50 hover:bg-gray-800 transition-colors">
          <span class="text-sm text-violet-400">{post.frontmatter.category}</span>
          <h3 class="text-lg font-semibold text-white group-hover:text-violet-400 transition-colors">
            {post.frontmatter.title}
          </h3>
          <p class="text-sm text-gray-400">{post.frontmatter.description}</p>
        </article>
      </a>
    ))}
  </div>
</section>

