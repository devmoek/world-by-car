---
import { Send, MapPin, Mail, Stars } from 'lucide-astro';

import Layout from "../../layouts/Layout.astro"
import Header from "../../components/RusHeader.astro"
import Footer from "../../components/Footer.astro"
---

<Layout title="Контакты">
    <Header />
     <div class="min-h-screen bg-[#13151A] py-12 px-4">
      <div class="max-w-5xl mx-auto">
        {/* Header Section */}
        <div class="text-center mb-16 relative">
          <Stars class="w-6 h-6 text-indigo-400 absolute top-0 left-1/2 -translate-x-1/2 -translate-y-full opacity-75" />
          <h1 class="text-4xl font-bold text-white mb-4">Давайте общаться</h1>
          <p class="text-slate-400 max-w-2xl mx-auto">
            Есть вопросы о наших путешествиях? Хотите поделиться своей историей? 
            Мы будем рады услышать вас.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-16">
          {/* Contact Info Cards */}
          <div class="bg-[#161B23] backdrop-blur-sm p-6 rounded-lg border border-slate-800 hover:border-indigo-500/50 transition-colors">
            <MapPin class="w-6 h-6 text-indigo-400 mb-4" />
            <h3 class="font-semibold text-white mb-2">Адрес</h3>
            <p class="text-slate-400">Грузия</p>
          </div>

          <div class="bg-[#161B23] backdrop-blur-sm p-6 rounded-lg border border-slate-800 hover:border-indigo-500/50 transition-colors">
            <Send class="w-6 h-6 text-indigo-400 mb-4" />
            <h3 class="font-semibold text-white mb-2">Телеграм</h3>
            <a href="https://t.me/devmoek" class="text-slate-400">@devmoek</a>
          </div>

          <div class="bg-[#161B23] backdrop-blur-sm p-6 rounded-lg border border-slate-800 hover:border-indigo-500/50 transition-colors">
            <Mail class="w-6 h-6 text-indigo-400 mb-4" />
            <h3 class="font-semibold text-white mb-2">Эл. почта</h3>
            <p class="text-slate-400">info@devmoek.com</p>
          </div>
        </div>

        {/* Contact Form */}
        <div class="bg-[#161B23] backdrop-blur-sm rounded-lg border border-slate-800 p-8 max-w-2xl mx-auto">
          <form class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">
                  Имя
                </label>
                <input
                  type="text"
                  class="w-full px-4 py-2 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                  placeholder="Иван"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">
                  Фамилия
                </label>
                <input
                  type="text"
                  class="w-full px-4 py-2 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                  placeholder="Петров"
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-slate-300 mb-2">
                Эл. почта
              </label>
              <input
                type="email"
                class="w-full px-4 py-2 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="ivan@example.ru"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-slate-300 mb-2">
                Сообщение
              </label>
              <textarea
                rows={4}
                class="w-full px-4 py-2 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="Расскажите о ваших интересах в путешествиях..."
              />
            </div>

            <button
              type="submit"
              class="w-full bg-indigo-600 text-white py-3 px-6 rounded-lg hover:bg-indigo-500 transition-colors flex items-center justify-center gap-2 group"
            >
              Отправить сообщение
              <Send class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
            </button>
          </form>
        </div>
      </div>
    </div>
    <Footer />
</Layout>

