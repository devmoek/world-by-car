---
import Layout from "../../../layouts/Layout.astro";
import Card from "../../../components/Card.astro";

const allPosts = await Astro.glob('../../../content/posts/en/*.md');
const pageTitle = "Blog";

---
<Layout title={pageTitle}>
  <h1 class="text-white">Posts</h1>
  <ul>
    {allPosts.map((post) => {
      const href = `/en/posts/${post.frontmatter.slug}`;
      return <Card title={post.frontmatter.title} href={href} date={post.frontmatter.date} />;
    })}
  </ul>
</Layout>
